<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="onLoaded">
  <StackLayout>
    <!-- Champ de saisie de la phrase -->
    <TextField text="{{ userInput }}" hint="Rédigez la phrase ici..." />

    <!-- Chrono affiché si besoin -->
    <Label text="Temps écoulé: {{ displayTimer }}" />

    <!-- Bouton terminer (premier clic) -->
    <Button text="Terminer" tap="onFinishAttempt" />

    <!-- Bouton nouvel essai, visible après l'enregistrement -->
    <Button text="Nouvel essai" tap="onNewAttempt" visibility="{{ isNewAttemptVisible ? 'visible' : 'collapse' }}" />

    <!-- Bouton terminer le test, visible après l'enregistrement -->
    <Button text="Terminer le test" tap="onCompleteTest" visibility="{{ isCompleteVisible ? 'visible' : 'collapse' }}" />
  </StackLayout>
</Page>
